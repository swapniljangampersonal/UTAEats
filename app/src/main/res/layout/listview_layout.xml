<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:padding="6dip">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="114dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="0dp"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_test"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/secondLine"
            android:layout_width="72dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="187dp"
            android:layout_toRightOf="@id/icon"
            android:singleLine="true"
            android:text="Quantity"
            android:textSize="12sp"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"
            />

        <TextView
            android:id="@+id/countlabel"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/icon"
            android:singleLine="true"
            android:text="Description"
            android:textSize="12sp"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"/>

        <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
            android:id="@+id/servings"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnDelete"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-5dp"
            android:layout_marginEnd="69dp"
            android:theme="@style/NonMaterial.Button"
            app:backGroundColor="@color/colorText"
            app:textColor="@android:color/black">

        </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/countlabel"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="17dp"
            android:background="#FAFAFA"
            android:src="@drawable/ic_delete_black_24dp"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false" />

        <TextView
            android:id="@+id/firstLine"
            android:layout_width="257dp"
            android:layout_height="45dp"
            android:layout_alignWithParentIfMissing="true"
            android:layout_above="@id/secondLine"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="13dp"
            android:layout_toRightOf="@id/icon"
            android:gravity="center_vertical"
            android:text="Example application"
            android:textSize="16sp"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:focusable="false"/>

    </RelativeLayout>

</LinearLayout>

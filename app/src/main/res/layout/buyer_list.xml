<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp">

        <ImageView
            android:id="@+id/buyerItemImage"
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dip"
            android:layout_marginBottom="0dp"
            android:contentDescription="TODO"
            android:src="@mipmap/ic_test" />

        <TextView
            android:id="@+id/buyerItemQuantity"
            android:layout_width="72dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="221dp"
            android:layout_marginBottom="473dp"
            android:layout_toRightOf="@id/icon"
            android:singleLine="true"
            android:text="Quantity"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buyerItemLocation"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:layout_below="@+id/buyerItemQuantity"
            android:layout_marginTop="-473dp"
            android:layout_toEndOf="@+id/buyerItemImage"
            android:singleLine="true"
            android:text="Description"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/buyerItemCost"
            android:layout_width="99dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="449dp"
            android:layout_toRightOf="@id/icon"
            android:singleLine="true"
            android:text="Description"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="56dp"
            android:layout_height="55dp"
            android:layout_above="@+id/buyerItemCost"
            android:layout_alignParentStart="true"
            android:layout_marginStart="315dp"
            android:layout_marginEnd="13dp"
            android:background="#FAFAFA"
            android:onClick="deleteAlert"
            android:src="@drawable/ic_add_box_black_24dp" />

        <TextView
            android:id="@+id/buyerItemName"
            android:layout_width="192dp"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/buyerItemQuantity"
            android:layout_alignBottom="@+id/btnDelete"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="34dp"
            android:text="Example application"
            android:textSize="16sp" />

    </RelativeLayout>
</LinearLayout>